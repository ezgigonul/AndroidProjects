<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    android:baselineAligned="false"
    android:weightSum="4">
    <FrameLayout
        android:id="@+id/left_fragment"
        android:name="com.example.nestedapp.LeftFragment"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <FrameLayout
        android:id="@+id/right_fragment"
        android:name="com.example.nestedapp.RightFragment"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <FrameLayout
        android:id="@+id/fragment_left_container"
        android:name="com.example.nestedapp.LeftChildFragment"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
       />

    <FrameLayout
        android:id="@+id/fragment_right_container"
        android:name="com.example.nestedapp.RightChildFragment"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

</LinearLayout>